{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution" : "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": false,
    "noLib": false,
    "outDir": "./dist-es6/",
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "scripts",
    "typings",
    "dist-es6",
    "dist-node4"
  ]
}
